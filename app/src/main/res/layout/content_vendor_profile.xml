<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_vendor_profile"
    tools:context=".activities.ManageVendor"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/nav"
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="20dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:hint="Name:"
                android:textColorHint="#5089e3"
                android:textSize="20dp"
                android:inputType="none"
                android:textStyle="bold"
                android:textColor="#5089e3"
                android:background="@null"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1" />


        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:background="@null"
            android:textColor="#000000"
            android:text="Address: " />

        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="#000000"
            android:background="@null"
            android:text="Type: "/>
        <TextView
            android:id="@+id/gst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textColor="#000000"
            android:background="@null"
            android:text="GST No: "/>
    </LinearLayout>
        <LinearLayout
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent">
            <!--<ImageButton-->
            <!--android:id="@+id/edit"-->
            <!--android:layout_weight="0.1"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:background="@color/transparent"-->
            <!--android:src="@drawable/ic_edit"/>-->
            <!--<ImageButton-->
            <!--android:id="@+id/save"-->
            <!--android:layout_weight="0.1"-->
            <!--android:layout_width="0dp"-->
            <!--android:background="@color/transparent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_save"-->
            <!--android:visibility="gone"/>-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edit"
                android:text="EDIT"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="5dp"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:maxLines="1"
                android:background="@drawable/inactive_button"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/save"
                android:text="Save"
                android:visibility="gone"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#262626"
                android:textAllCaps="false"
                android:maxLines="1"
                android:background="@drawable/active_button"/>

        </LinearLayout>


    </LinearLayout>
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/nav"
        android:background="#e8e8e8"/>


    <TextView
        android:id="@+id/no_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="No Projects"
        android:textSize="25sp"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/project_list"
        android:layout_below="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Project List"
        android:padding="5dp"
        android:textStyle="bold"
        android:gravity="center"/>
    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/project_list"
        android:background="#e8e8e8"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/item"
        android:layout_below="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:visibility="gone" />


    <TextView
        android:id="@+id/hider"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_bar"
        android:alpha="0.6"
        android:background="#ffffff"
        android:visibility="gone" />
</RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ic_add" />
</android.support.design.widget.CoordinatorLayout>